---
// components/Codeblock.astro

const { children, className = '' } = Astro.props || {};  // Ensure Astro.props is defined

// Safely handle children
let codeString = typeof children === 'string' ? children : children?.props?.children || '';

// For testing purposes, append a string
codeString += "\n\n// Appended by Codeblock.astro";

---

<pre class={className} style="background-color: #2d2d2d; color: #fff; padding: 1rem; border-radius: 0.5rem;">
  <code>{codeString}</code>
</pre>
